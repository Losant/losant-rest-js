{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "key": {
      "title": "Mqtt Topic",
      "type": "string",
      "pattern": "^[0-9a-zA-Z_-]{1,230}$",
      "messages": {
        "required": "A mqtt topic is required",
        "pattern": "Must be a valid mqtt topic"
      }
    },
    "type": {
      "type": "string",
      "enum": [
        "mqttTopic"
      ]
    },
    "outputIds": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object"
    },
    "config": {
      "type": "object",
      "additionalProperties": false
    }
  },
  "required": [
    "key",
    "type"
  ],
  "additionalProperties": false
}