{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "maxLength": 32767
    },
    "templateType": {
      "type": "string",
      "enum": [
        "layout",
        "page",
        "component"
      ]
    },
    "layoutId": {
      "type": "string",
      "pattern": "^[A-Fa-f\\d]{24}$"
    },
    "body": {
      "type": "string",
      "maxLength": 131072
    },
    "templateTags": {
      "type": "object",
      "patternProperties": {
        "^[0-9a-zA-Z_-]{1,255}$": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "templateType",
    "body"
  ]
}