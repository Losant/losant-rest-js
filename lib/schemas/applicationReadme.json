{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "applicationId": {
      "type": "string",
      "pattern": "^[A-Fa-f\\d]{24}$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "lastUpdatedById": {
      "type": "string",
      "pattern": "^[A-Fa-f\\d]{24}$"
    },
    "lastUpdatedByType": {
      "type": "string",
      "enum": [
        "flow",
        "user",
        "apiToken"
      ]
    },
    "content": {
      "type": "string"
    }
  }
}