      "title": "Value Path",
      "description": "JSON Path of where to find value to check in payload",
      "type": "string",
      "minLength": 1
    },
    "_changeTypeOthers": {
      "title": "Change Type",
      "enum": [
        "percent",
        "percentInc",
        "percentDec",
        "value",
        "valueInc",
        "valueDec"
      ]
    },
    "_changeTypeAny": {
      "title": "Change Type",
      "enum": [
        "any"
      ]
    },
    "changeThreshold": {
      "title": "Change Threshold",
