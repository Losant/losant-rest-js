{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "toEmail"
  ],
  "properties": {
    "toEmail": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "format": "email",
        "maxLength": 1024
      }
    },
    "subject": {
      "type": "string",
      "maxLength": 255
    },
    "message": {
      "type": "string",
      "maxLength": 32767
    },
    "theme": {
      "type": "string",
      "enum": [
        "dark",
        "light"
      ]
    },
    "time": {
      "type": "number"
    },
    "timezone": {
      "type": "string",
      "maxLength": 255
    },
    "locale": {
      "type": "string",
      "maxLength": 5
    }
  },
  "additionalProperties": false
}