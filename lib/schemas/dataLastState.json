{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "resultPath": {
      "type": "string",
      "title": "Result Path",
      "minLength": 1
    },
    "deviceTags": {
      "title": "Device Tags",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Device Tag Pair",
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "minLength": 1
      }
    },
    "deviceIds": {
      "title": "Device IDs",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "title": "Device ID"
      }
    }
  },
  "allOf": [
    {
      "required": [
        "resultPath"
      ]
    },
    {
      "anyOf": [
        {
          "required": [
            "deviceTags"
          ]
        },
        {
          "required": [
            "deviceIds"
          ]
        }
      ]
    }
  ]
}