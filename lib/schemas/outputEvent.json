{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "level": {
      "title": "Level",
      "enum": [
        "info",
        "warning",
        "error",
        "critical"
      ]
    },
    "subjectTemplate": {
      "title": "Subject Template",
      "type": "string",
      "minLength": 1
    },
    "messageTemplate": {
      "title": "Message Template",
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "level",
    "subjectTemplate",
    "messageTemplate"
  ]
}