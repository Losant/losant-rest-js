{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ]
    },
    "description": {
      "type": "string",
      "maxLength": 32767
    },
    "caBundle": {
      "type": "string",
      "maxLength": 32767,
      "minLength": 50
    }
  },
  "required": [
    "name",
    "caBundle"
  ],
  "additionalProperties": false
}