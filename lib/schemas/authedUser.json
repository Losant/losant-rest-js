{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "pattern": "^[A-Fa-f\\d]{24}$"
    },
    "token": {
      "type": "string",
      "minLength": 1
    },
    "needsToVerifyEmail": {
      "type": "boolean"
    }
  },
  "required": [
    "userId",
    "token"
  ]
}