{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "pattern": "^[A-Fa-f\\d]{24}$"
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 1024
    },
    "role": {
      "type": "string",
      "enum": [
        "admin",
        "view"
      ]
    }
  },
  "additionalProperties": false,
  "anyOf": [
    {
      "required": [
        "email",
        "role"
      ]
    },
    {
      "required": [
        "userId",
        "role"
      ]
    }
  ]
}