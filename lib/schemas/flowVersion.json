                "type": "object"
              },
              "meta": {
                "type": "object"
              },
              "outputIds": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "maxLength": 255
                  },
                  "maxItems": 100
                },
                "maxItems": 100
              }
            },
            "additionalProperties": false,
            "required": [
              "type"
            ]
          }
        },
        "nodes": {
