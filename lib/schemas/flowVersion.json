                      },
                      "validMax": {
                        "type": "number"
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "type",
                      "label"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
