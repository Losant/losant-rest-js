        "flowVersionId": {
          "type": "string",
          "pattern": "^[A-Fa-f\\d]{24}$"
        },
        "flowId": {
          "type": "string",
          "pattern": "^[A-Fa-f\\d]{24}$"
        },
        "applicationId": {
