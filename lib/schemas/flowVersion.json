                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "payloadPath"
                        ]
                      },
                      "label": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1024
                      },
                      "id": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1024
                      },
                      "description": {
                        "type": "string",
                        "maxLength": 32767
                      },
                      "required": {
                        "type": "boolean"
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "type",
                      "label"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "section"
                        ]
                      },
                      "label": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1024
                      },
                      "id": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1024
                      },
                      "description": {
                        "type": "string",
                        "maxLength": 32767
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "type",
                      "label"
                    ]
                  }
                ]
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "outputCount",
            "resultMode",
            "fields"
